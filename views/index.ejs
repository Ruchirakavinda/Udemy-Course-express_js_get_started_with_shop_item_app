<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %> 
<body>
  <%- include('./partials/nav.ejs') %> 
      <div class="container">
        <ul class="collection with-header">
          <li class="collection-header"><h5>Your Items</h5></li>

            <%if(items.length>0){%>
              <% items.forEach(item => {%>
              <li class="collection-item"><div><a href="/details/<%= item._id %>"><%= item.name %> : $<%= item.price %></a> <a href="#!" class="secondary-content"><i class="material-icons">delete</i></a>
                <a href="#!" class="secondary-content"><i class="material-icons">edit</i></a></div></li>
           <% });%>

           <% }else{%>
              <li class="collection-item"><div>There are No Items to Show...</div></li>
            <%}%>
          
          </ul>
      </div>

      
</body>
</html>