<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Home</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    
</head>
<body>
 
    
    <nav>
        <div class="nav-wrapper container">
          <a href="/" class="brand-logo">FirstEX</a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="./add_item">Add Item </a></li>
           
          </ul>
        </div>
      </nav>

      <div class="container">
        <ul class="collection with-header">
          <li class="collection-header"><h4>Your Items</h4></li>

            <%if(items.length>0){%>
              <% items.forEach(item => {%>
              <li class="collection-item"><div><%= item.name %> : $<%= item.price %> <a href="#!" class="secondary-content"><i class="material-icons">delete</i></a>
                <a href="#!" class="secondary-content"><i class="material-icons">edit</i></a></div></li>
           <% });%>

           <% }else{%>
              <li class="collection-item"><div>There are No Items to Show...</div></li>
            <%}%>
          
          </ul>
      </div>

      
</body>
</html>